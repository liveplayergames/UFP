{
    "manifest_version": 2,

    "name": "Texas Hold 'Em",
    "description": "Heads-Up Texas Hold 'Em",
    "version": "1.1",

    "externally_connectable": {
	"matches": ["*://*.liveplayergames.com/*"]
    },

    "background": {
	"scripts": [
	    "bundle/background.js"
	],
	"persistent": true
    },

    "browser_action": {
	"default_icon": "icon.png",
	"default_popup": "popup.html",
	"default_title": "Texas Hold 'Em"
    },
    "permissions": [
	"activeTab",
	"storage"
    ]
}
